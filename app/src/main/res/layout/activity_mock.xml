        android:layout_alignStart="@+id/act_mock_btn_service_stop"
        android:layout_marginTop="80dp"
        android:text="开启服务" />

    <Button
        android:id="@+id/act_mock_btn_service_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭服务"
        android:layout_centerInParent="true"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="354dp" />

    <Button
        android:id="@+id/act_mock_btn_start_get_app_list_service_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/act_mock_btn_service_stop"
